    <HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:id="@+id/scrollViewPictureOfPoint"
        android:padding="0dp"
        android:layout_margin="0dp"
        android:layout_below="@+id/addPhoto">

        <LinearLayout
            android:id="@+id/picturePrevOfPoint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="0dp"
            android:layout_margin="0dp">
        </LinearLayout>

    </HorizontalScrollView>

    <RelativeLayout
        android:layout_width="355dp"
        android:layout_height="150dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/scrollViewPictureOfPoint"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp">
        android:layout_below="@id/DisplayImage"

        <TextView
            android:textColor="@color/colorWhite"
            android:id="@+id/Textinfo"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </RelativeLayout>

    <Button
        android:id="@+id/closeBtn"
        android:layout_width="90dp"
        android:layout_height="20dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:background="@drawable/quitbtn" />

</RelativeLayout>